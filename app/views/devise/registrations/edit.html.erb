<div class="container">
  <div class="col-xs-11">
    <div class="line_header">
      <h2>マイページ</h2>
    </div>
    <%= alert %>
    <div class="thumbnail">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= devise_error_messages! %>

        <div class="form-horizontal">
          <div class="form-group">
            <%= f.label :email, class: "col-sm-4 control-label" %>
            <div class="col-sm-8">
              <%= f.email_field :email, autofocus: true, class: "form-control" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :name, class: "col-sm-4 control-label" %>
            <div class="col-sm-8">
              <%= f.text_field :name, class: "form-control" %>
            </div>
          </div>

          <% if @user.provider.blank? %>
            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>

            <div class="form-group">
              <%= f.label :password, class: "col-sm-4 control-label" %>
              <div class="col-sm-8">
                <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
                <p class="help-block">※変更しない場合は、空白にしてください。変更する場合は、６文字以上で入力してください。</p>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :password_confirmation, class: "col-sm-4 control-label" %>
              <div class="col-sm-8">
                <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :current_password, class: "col-sm-4 control-label" %>
              <div class="col-sm-8">
                <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
                <p class="help-block">※変更確認のため、現在のパスワードを入力してください。</p>
              </div>
            </div>
          <% end %>

          <div class="field text-center">
            <%= profile_img(@user) if profile_img(@user) %>
            <%= f.file_field :avatar, class: "col-sm-offset-4 col-sm-8" %>
            <%= f.hidden_field :avatar_cache, class: "col-sm-offset-4 col-sm-8" %><br>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-8">
              <%= f.submit "更新", class: "btn btn-primary btn-block" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div class="thumbnail">
      <div class="form-group text-center">
        <h3>アカウントの削除</h3>
        <p>アカウントを削除しますがよろしいですか? <%= button_to "アカウントの削除", registration_path(resource_name), class: "btn btn-danger btn-sm", data: { confirm: "アカウントを削除してしまいますがよろしいですか?" }, method: :delete %></p>
        <%= link_to "Back", :back, class: 'btn btn-default back_btn' %>
      </div>
    </div>
  </div>
</div>
